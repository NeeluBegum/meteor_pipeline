// Profile config names for nf-core/configs
process.module = ['apps/singularity']

params {
  config_profile_description = 'Kings College London Rosalind HPC'
  config_profile_contact = 'Theo Portlock'
  config_profile_url = 'https://www.rosalind.kcl.ac.uk/'
  partition = null
  clusterOptions = null
  save_reference = true
  //max_memory = 64.GB
  //max_cpus = 16
  //max_time = 24.h
  partition = 'shared'
}

singularity {
  enabled = true
  autoMounts = true
  docker.enabled = false
}

process {
  executor = 'slurm'
  maxRetries = 2
  clusterOptions = { "--partition=$params.partition ${params.clusterOptions ?: ''}" }
  //queue = 'brc'
}

executor {
	submitRateLimit = '1 sec'
}
